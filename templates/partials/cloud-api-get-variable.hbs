<div class="apiHelperCloudApiGetVariable"  data-style="{{style}}">
    <div class="apiHelper">
        <div class="apiHelperBox">
            <table class="apiHelperTableNoMargin">
{{#if productToken}}
                <tr><td class="apiHelperProductSelectorLabel">Product Access Token</td><td><input type="text" size="50" class="apiHelperAuthSettingsProductAccessToken" value=""></td><td>&nbsp;</td></tr>
{{/if}}
{{#if productOrMyToken}}
                <tr><td class="apiHelperProductSelectorLabel">Product Access Token</td>
                    <td><input type="radio" class="apiHelperManualToken" checked>
                        <span class="apiHelperManualLabel" style="display:none">Manually entered token</span>
                        <input type="text" size="50" class="apiHelperAuthSettingsProductAccessToken" value=""> &nbsp;
                        <label><input type="radio" class="apiHelperMyToken">My Token</label></td>
                    <td>&nbsp;</td></tr>
{{/if}}
{{#if customerToken}}
                <tr><td class="apiHelperProductSelectorLabel">Customer Access Token</td><td><input type="text" size="50" class="apiHelperAuthSettingsCustomerAccessToken" value=""></td><td>&nbsp;</td></tr>
{{/if}}
{{#if productId}}
                <tr><td class="apiHelperProductSelectorLabel">Product ID</td><td><input type="text" size="10" class="apiHelperAuthSettingsProduct" value=""></td><td>&nbsp;</td></tr>
{{/if}}
{{#if productIdOrSandbox}}
                <tr><td class="apiHelperProductSelectorLabel">Product ID</td>
                    <td><input type="radio" class="apiHelperManualProductId" checked>
                        <span class="apiHelperManualProductIdLabel" style="display:none">Manually entered Product ID</span>
                        <input type="text" size="10" class="apiHelperAuthSettingsProduct" value=""> &nbsp;
                        <label><input type="radio" class="apiHelperSandboxProductIdRadio">Sandbox Product</label>
                        <select class="apiHelperSelect apiHelperSandboxProductIdSelect"></select></td>
                    <td>&nbsp;</td></tr>
{{/if}}
{{#if deviceIdField}}
                <tr><td class="apiHelperProductSelectorLabel">Device ID</td><td><input type="text" size="30" class="apiHelperDeviceLookupDeviceId" value=""></td><td class="apiHelperProductSelectorLabel"></td></tr>
{{/if}}
{{#if deviceSelect}}
                <tr><td class="apiHelperProductSelectorLabel">Device</td><td><select class="apiHelperCloudDeviceSelect apiHelperCommonDevice apiHelperSelect"></select></td><td>&nbsp;</td></tr>
{{/if}}
                <tr><td class="apiHelperProductSelectorLabel">Variable Name</td><td><input type="text" size="20" class="apiHelperVariableName" value="sensor"></td><td>&nbsp;</td></tr>
                <tr><td class="apiHelperProductSelectorLabel" colspan="2"><button class="apiHelperGetVariable">Get Variable</button></td><td>&nbsp;</td></tr>
            </table>
            <div class="apiHelperStatus" style="padding-top: 5px;"></div>
            <div class="apiHelperApiRequest" style="padding-top: 8px; display:none">Request:<br/><pre class="apiHelperMonoSmall"></pre></div>
            <div class="apiHelperApiResponse" style="display:none">Response:<br/><pre class="apiHelperMonoSmall"></pre></div>
        </div>
    </div>
    <div class="apiHelperCloudApiOutputJson" style="display:none">
        <pre class="codeboxPre"><code class="codebox lang-json">                
        </code></pre>
    </div>
</div>

